{{#if mensaje}}

  <div class="container">
        <div class="row">
            <div class="col s12 center-align">
                <div class="card-panel green accent-4">
                    <span class="white-text">{{mensaje}}
                    </span>
                </div>
            </div>
        </div>
    </div>

{{/if}}

{{#if error}}

  <div class="container">
        <div class="row">
            <div class="col s12 center-align">
                <div class="card-panel  red darken-1">
                    <span class="white-text">{{error}}
                    </span>
                </div>
            </div>
        </div>
    </div>

{{/if}}